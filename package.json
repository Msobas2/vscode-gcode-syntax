{
    "name": "vscode-gcode-syntax",
    "displayName": "G-Code Syntax",
    "shortName": "G-Code",
    "description": "CNC G-Code Syntax Langauge",
    "version": "0.4.0",
    "license": "MIT",
    "publisher": "appliedengdesign",
    "author": {
        "name": "Mike Centola",
        "url": "https://mikecentola.com"
    },
    "copyright": "Copyright (c) 2020 Applied Eng. & Design / Mike Centola",
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "keywords": [
        "G-Code",
        "CNC",
        "syntax",
        "gcode",
        "nc"
    ],
    "icon": "images/logo.png",
    "galleryBanner": {
        "color": "#666666",
        "theme": "dark"
    },
    "markdown": "github",
    "repository": {
        "type": "git",
        "url": "https://github.com/appliedengdesign/vscode-gcode-syntax.git"
    },
    "homepage": "https://github.com/appliedengdesign/vscode-gcode-syntax",
    "bugs": {
        "url": "https://github.com/appliedengdesign/vscode-gcode-syntax/issues"
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:gcode"
    ],
    "contributes": {
        "languages": [
            {
                "id": "gcode",
                "aliases": [
                    "gcode",
                    "GCODE",
                    "nc",
                    "syntax",
                    "highlighter",
                    "language"
                ],
                "extensions": [
                    ".m",
                    ".apt",
                    ".nc",
                    ".cnc",
                    ".ncc",
                    ".ecs",
                    ".tap",
                    ".fnc",
                    ".ncg",
                    ".gc",
                    ".fan",
                    ".fgc",
                    ".din",
                    ".xpi",
                    ".hnc",
                    ".ncp",
                    ".min",
                    ".gcd",
                    ".rol",
                    ".mpr",
                    ".ply",
                    ".out",
                    ".eia",
                    ".plt",
                    ".sbp",
                    ".mpf",
                    ".gcode",
                    ".g00",
                    ".cls",
                    ".dnc",
                    ".knc",
                    ".prg",
                    ".001",
                    ".ngc",
                    ".ssb",
                    ".sub",
                    ".lib"
                ],
                "configuration": "./language/gcode-language.json"
            }
        ],
        "grammars": [
            {
                "language": "gcode",
                "scopeName": "source.gcode",
                "path": "./syntaxes/gcode.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "gcode",
                "path": "./snippets/gcode-snippets.json"
            },
            {
                "language": "gcode",
                "path": "./snippets/mcode-snippets.json"
            },
            {
                "language": "gcode",
                "path": "./snippets/general-snippets.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "G-Code",
            "properties": {
                "gcode.general.colorization": {
                    "type": "boolean",
                    "default": false,
                    "markdowndescription": "Enable G-Code specific colorization options",
                    "scope": "window"
                },
                "gcode.general.machineType": {
                    "type": "string",
                    "default": "Mill",
                    "enum": [
                        "Mill",
                        "Lathe"
                    ],
                    "enumDescriptions": [
                        "Configure G-Code Extension for CNC Mill",
                        "Configure G-Code Extension for CNC Lathe",
                        "Configure G-Code Extension for 3D Printers"
                    ],
                    "markdownDescription": "Configure G-Code Extension for a Specific Machine Type",
                    "scope": "window"
                },
                "gcode.tree.autoRefresh": {
                    "type": "boolean",
                    "default": true,
                    "markdowndescription": "Enable G-Code Tree Auto Refresh",
                    "scope": "window"
                },
                "gcode.stats.enable": {
                    "type": "boolean",
                    "default": false,
                    "markdowndescription": "Enable G-Code Statistics Panel",
                    "scope": "window"
                },
                "gcode.stats.autoRefresh": {
                    "type": "boolean",
                    "default": false,
                    "markdowndescription": "Enable G-Code Stats Auto Refresh",
                    "scope": "window"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "gcode",
                    "title": "G-Code",
                    "icon": "resources/icons/gcode.svg"
                }
            ]
        },
        "views": {
            "gcode": [
                {
                    "id": "gcode.gcodeTree",
                    "name": "G-Code Tree",
                    "contextualTitle": "G-Code",
                    "type": "tree"
                },
                {
                    "id": "gcode.gcodeStats",
                    "name": "G-Code Stats",
                    "when": "config.gcode.statsEnable",
                    "contextualTitle": "G-Code",
                    "type": "tree"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "gcode.gcodeTree",
                "contents": "Tree only available when viewing G-Code",
                "when": "!gcodeTreeViewEnabled"
            },
            {
                "view": "gcode.gcodeStats",
                "contents": "G-Code Stats only available when viewing G-Code",
                "when": "!gcodeStatsViewEnabled && config.gcode.statsEnable"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "gcode.gcodeTree.refresh",
                    "when": "view == gcode.gcodeTree",
                    "group": "navigation"
                },
                {
                    "command": "gcode.gcodeStats.refresh",
                    "when": "view == gcode.gcodeStats && config.gcode.statsEnable",
                    "group": "navigation"
                }
            ]
        },
        "commands": [
            {
                "command": "gcode.gcodeTree.refresh",
                "title": "G-Code: Refresh Tree",
                "icon": {
                    "light": "resources/icons/light/refresh.svg",
                    "dark": "resources/icons/dark/refresh.svg"
                }
            },
            {
                "command": "gcode.gcodeStats.refresh",
                "title": "G-Code: Refresh Stats",
                "icon": {
                    "light": "resources/icons/light/refresh.svg",
                    "dark": "resources/icons/dark/refresh.svg"
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint -c .eslintrc.js --ext .ts ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTests.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.11.8",
        "@types/vscode": "^1.50.0",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "@typescript-eslint/parser": "^4.4.1",
        "eslint": "^7.11.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.0.3",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {}
}
